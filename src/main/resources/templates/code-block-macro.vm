#if ($link)
	<div class="gl-code panel pdl" style="border-width: 1px;">
		<div class="codeHeader panelHeader pdl" style="border-bottom-width: 1px;">
			<img class="gl-logo" src="$req.contextPath/download/resources/org.vaulttec.confluence-gitlab-link:gitlab-link-resources/images/gitlab-logo.png"/>
			$i18n.getText("org.vaulttec.confluence-gitlab-link.code-block.macro.file")
			<a href="$url">
				$link.name
			</a>
		</div>
		#if ($file)
			<div class="codeContent panelContent pdl">
				<pre class="syntaxhighlighter-pre" data-syntaxhighlighter-params="brush: $language; gutter: $gutter; first-line: $firstLine; theme: $theme;" data-theme="$theme">$file</pre>
			</div>
		#end
	</div>
#else
	#set ($macro = "Code Block")
	#parse ("templates/error.vm")
#end
